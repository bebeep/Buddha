<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:id="@+id/scrollview"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="none"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fingertip.baselib.view.FullTopConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.fingertip.baselib.view.shapeview.ShapeView
                android:layout_width="23dp"
                android:layout_height="23dp"
                app:gdBgColor="#3EEBD5"
                app:gdRadius="11.5dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.fingertip.baselib.view.shapeview.ShapeTextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Me"
                android:textColor="#ff1d2020"
                android:textSize="30sp"
                app:zdyFont="bold"
                android:gravity="center"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_default_head"
                style="@style/constraint_v_center_end"
                android:padding="10dp"
                android:layout_marginEnd="60dp"/>

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                android:padding="10dp"
                style="@style/constraint_v_center_end"
                android:layout_marginEnd="10dp"/>
        </com.fingertip.baselib.view.FullTopConstraintLayout>

        <ImageView
            android:id="@+id/iv_head"
            app:radius="45dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/icon_default_head"
            app:layout_constraintTop_toBottomOf="@+id/top_bar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_width="90dp"
            android:layout_height="90dp"/>









    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
