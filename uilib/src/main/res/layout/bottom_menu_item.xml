<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_tab_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        style="@style/constraint_center"
        android:src="@drawable/tab_me_selector"/>

    <com.fingertip.baselib.view.shapeview.ShapeTextView
        android:id="@+id/tv_tab_msg_count"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_tab_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_tab_icon"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:text="99+"
        app:gdBgColor="#EA5D5D"
        app:gdRadius="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:minWidth="12dp"
        android:gravity="center"
        android:paddingHorizontal="3dp"/>

    <View
        android:id="@+id/v_num_moment"
        android:background="@drawable/bg_oval_red"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/iv_tab_icon"
        app:layout_constraintEnd_toEndOf="@+id/iv_tab_icon"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>