<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_inner_parent"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.fingertip.baselib.view.shapeview.ShapeImageView
        android:id="@+id/iv_inner_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="24dp"
        app:radius="12dp"
        android:src="@mipmap/icon_avatar_default"
        android:scaleType="centerCrop"
        android:layout_height="24dp"/>

    <com.fingertip.baselib.view.MyTextView
        android:id="@+id/tv_inner_nickname"
        app:layout_constraintStart_toEndOf="@+id/iv_inner_head"
        app:layout_constraintTop_toTopOf="@+id/iv_inner_head"
        app:layout_constraintBottom_toBottomOf="@+id/iv_inner_head"
        android:layout_width="wrap_content"
        android:text="Wuyanzu asdasdasdas"
        android:textColor="#666666"
        android:textSize="12sp"
        app:zdyFont="regular"
        android:includeFontPadding="false"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        />


    <com.fingertip.baselib.view.MyTextView
        android:id="@+id/tv_inner_like"
        app:layout_constraintTop_toTopOf="@+id/iv_inner_head"
        app:layout_constraintBottom_toBottomOf="@+id/iv_inner_head"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:drawableStart="@drawable/bg_comment_like"
        android:textColor="#2D2D2D"
        android:textSize="11sp"
        android:text="88"
        android:gravity="center"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.fingertip.baselib.view.MyTextView
        android:id="@+id/tv_inner_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_inner_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_inner_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Wuyanzuasdasd"
        android:textColor="#333333"
        android:textSize="14sp"
        android:gravity="start"
        />


    <com.fingertip.baselib.view.MyTextView
        android:id="@+id/tv_inner_date"
        app:layout_constraintStart_toEndOf="@+id/iv_inner_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_inner_comment"
        android:layout_width="0dp"
        android:text="5 mins ago"
        android:textColor="#FF9D9D9D"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:zdyFont="regular"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
